@using Microsoft.AspNetCore.Http
@using SlideInfo.App.Helpers
@model IEnumerable<SlideInfo.App.Models.Slide>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            @foreach (var slide in Model)
            {
                <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3 thumb">
                    <div class="caption">
                        <h5><a asp-action="Display" asp-route-id="@slide.Id">@slide.Name</a></h5>
                        <a asp-action="Properties" asp-route-id="@slide.Id">Properties</a>
                        <a asp-action="AssociatedImages" asp-route-id="@slide.Id">Associated Images</a>
                        <a asp-action="Comments" asp-route-id="@slide.Id">Comments</a>
                    </div>
                    @{var imgName = slide.Id + ".jpeg";}
                    <img src="/images/slideThumbs/@imgName" alt="@slide.Name">
                </div>
           }
        </div>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FilePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Url)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DziUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mpp)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FilePath)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Url)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DziUrl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mpp)
                </td>
                <td>
                    <a asp-action="Properties" asp-route-id="@item.Id">Properties</a> |
                    <a asp-action="AssociatedImages" asp-route-id="@item.Id">Associated Images</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts
{
    <script>
        $('.thumb').hover(function () {
            $(this).find('.caption').css('opacity', '1');
        }, function () {
            $(this).find('.caption').css('opacity', '0');
        });
    </script>
}