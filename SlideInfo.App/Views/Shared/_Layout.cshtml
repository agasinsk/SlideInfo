@using Microsoft.AspNetCore.Http
@using SlideInfo.App.Helpers
@inject Microsoft.ApplicationInsights.AspNetCore.JavaScriptSnippet JavaScriptSnippet
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SlideInfo</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
    @Html.Raw(JavaScriptSnippet.FullScript)
</head>

<body>
@if (SignInManager.IsSignedIn(User))
{
    <div id="mySidenav" class="sidenav">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        <div class="col-xs-12 form-group">
            <label class="sidenav-text">User name:</label>
            <input class="form-control" id="commentUserName" type="text" placeholder="@UserManager.GetUserName(User)" disabled>
        </div>

        <div class="col-xs-12 form-group">
            <label class="sidenav-text">Slide name:</label>
            <input class="form-control" id="commentSlideName" type="text" placeholder="@ViewData[ViewDataConstants.SLIDE_NAME]" disabled>
        </div>
        
        <div class="col-xs-12 form-group">
            <label class="sidenav-text">Comment:</label>
            <textarea class="form-control" id="commentText" rows="6" placeholder="Your observations about this slide..." name="commentContent" required></textarea>
            <br/>
            <input type="submit" value="Submit" class="btn btn-success sidenav-button" />
        </div>

    </div>
}
    <div id="main">
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">SlideInfo</a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li class="@Html.IsActive("Home", "Index")">
                            <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (ViewData[ViewDataConstants.SLIDE_ID] != null)
                        {
                            <li class="dropdown @Html.IsSlideChosen("Slides", ViewData["SlideId"] as string)">
                                <a class="dropdown-toggle" data-toggle="dropdown" asp-area="" asp-controller="Slides" asp-action="Index">
                                    Slides
                                    <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a asp-area="" asp-controller="Slides" asp-action="Display" asp-route-id="@ViewData[ViewDataConstants.SLIDE_ID]">Display @ViewData[ViewDataConstants.SLIDE_NAME]</a>
                                    </li>
                                    <li>
                                        <a href="#"><span class="btn btn-success" onclick="openNav()">Add new comment</span></a>
                                    </li>
                                    <li class="divider"></li>
                                    <li>
                                        <a asp-area="" asp-controller="Slides" asp-action="Properties" asp-route-id="@ViewData[ViewDataConstants.SLIDE_ID]">Properties</a>
                                    </li>
                                    @if (ViewData[ViewDataConstants.HAS_ASSOCIATED_IMAGES] is string)
                                    {
                                        <li>
                                            <a asp-area="" asp-controller="Slides" asp-action="AssociatedImages" asp-route-id="@ViewData[ViewDataConstants.SLIDE_ID]">Associated Images</a>
                                        </li>
                                    }
                                    @if (ViewData[ViewDataConstants.HAS_COMMENTS] is string)
                                    {
                                        <li>
                                            <a class="@Html.IsDisabled("Slides", ViewData[ViewDataConstants.HAS_COMMENTS] as string)" asp-area="" asp-controller="Slides" asp-action="Comments" asp-route-id="@ViewData[ViewDataConstants.SLIDE_ID]">Comments</a>
                                        </li>
                                    }
                                </ul>
                            </li>
                        }
                        @if (ViewData[ViewDataConstants.SLIDE_ID] == null)
                        {
                            <li class="@Html.IsActiveController("Slides")">
                                <a asp-area="" asp-controller="Slides" asp-action="Index">Slides</a>
                            </li>
                        }
                        <li class="@Html.IsActive("Home", "About")"><a asp-area="" asp-controller="Home" asp-action="About">About</a></li>
                        <li class="@Html.IsActive("Home", "Contact")"><a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
                    </ul>
                    @await Html.PartialAsync("_LoginPartial")
                </div>
            </div>
        </nav>

        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; 2017 - SlideInfo.App</p>
            </footer>
        </div>
    </div>
    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>

<script>
    jQuery(function ($) {
        $('.navbar .dropdown').hover(function () {
            $(this).find('.dropdown-menu').first().stop(true, true).slideDown();

        }, function () {
            $(this).find('.dropdown-menu').first().stop(true, true).slideUp();

        });

        $('.navbar .dropdown > a').click(function () {
            location.href = this.href;
        });

    });

    function openNav() {
        document.getElementById("mySidenav").style.width = "250px";
    }

    function closeNav() {
        document.getElementById("mySidenav").style.width = "0";
    }

</script>